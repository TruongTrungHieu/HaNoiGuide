<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
      <shape 
        android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/strokecolor" />
            <solid android:color="@color/strokecolor" />
			<corners 
			    android:topRightRadius="15dp"
	     		android:topLeftRadius="15dp" ></corners>
        </shape>
   </item>

   <item android:bottom="1dp"> 
      <shape 
        android:shape="rectangle">
           <stroke android:width="0dp" android:color="#FFDDDDDD" />
           <solid android:color="@color/eggGroup" />
           <corners 
			    android:topRightRadius="15dp"
	     		android:topLeftRadius="15dp" ></corners>
        </shape>
   </item>

</layer-list>