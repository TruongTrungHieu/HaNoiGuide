<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools" >
<TableLayout     
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    tools:context="com.example.fromchitiet.MainActivity" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#000000" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ntl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:text="Nhà thờ Lớn Hà Nội"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/slideplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/slide_play" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bt_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1.00"
            android:background="@drawable/button"
            android:drawableLeft="@android:drawable/btn_star"
            android:text="Save"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/bt_ivebeen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:background="@drawable/button"
            android:text="I&apos;ve been"
            android:textColor="#ffffff" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:layout_height="30dp"
        android:text="Overview"
        android:background="#CCCCFF" />
	<TextView
	    android:layout_margin="2dp"
	    android:text="St. Joseph's Cathedral is a church on Nha Tho Street in the Hoan Kiem District, Ha Noi"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Information"
        android:background="#CCCCFF"
        android:gravity="center_vertical"
        android:padding="5dp" />
	<Button
	    android:id="@+id/bt_eat"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:drawableLeft="@drawable/eat"
	    android:text="Where to eat?"
	    android:background="#00CC00"
	    android:layout_margin="1dp"/>
	<Button
	    android:id="@+id/bt_todo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:drawableLeft="@drawable/todo"
	    android:text="What to do?"
	    android:layout_margin="1dp"
	    android:background="#00CC00"/>
</TableLayout>
</ScrollView>